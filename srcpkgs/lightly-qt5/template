# Template file for 'lightly-qt5'
pkgname=lightly-qt5
version=0.5.7
revision=1
build_style=cmake
configure_args="-DBUILD_QT6=OFF
 -DBUILD_TESTING=OFF
 -Wno-dev"
hostmakedepends="extra-cmake-modules"
makedepends="kdecoration-devel qt5-declarative-devel qt5-x11extras-devel
 kguiaddons-devel kconfigwidgets-devel kwindowsystem-devel gettext-devel
 kiconthemes-devel kcmutils-devel kirigami2-devel frameworkintegration-devel"
depends="lightly-qt6"
short_desc="Modern style for Qt5 applications"
maintainer="Kevin Figueroa <kfdevart@disroot.org>"
license="GPL-2.0-or-later"
homepage="https://github.com/Bali10050/Lightly"
distfiles="https://github.com/Bali10050/Lightly/archive/refs/tags/v${version}.tar.gz"
checksum=dfa89cb7ddcb57f0081acb702f8946cb9a0f3be009f18e68d52430072e5e6ea6
repository=cereus-extra

post_install() {
	rm -rf ${DESTDIR}/usr/share
}

lightly-git_package() {
	build_style=meta
	reverts="2023.12.29_4"
	depends="${sourcepkg}>=${version}_${revision}"
	short_desc+=" - transitional dummy package"
}
